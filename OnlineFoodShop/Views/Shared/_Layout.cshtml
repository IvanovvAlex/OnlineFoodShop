<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>SMS Platform</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
    <link rel="stylesheet" href="/css/text.css" />
    <link rel="stylesheet" href="/css/homePage.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand" href="/Home/IndexLoggedIn">OnlineFoodShop</a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            @if (SignInManager.IsSignedIn(User))
            {
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/Home/IndexLoggedIn">Home</a>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Products/Create" style="color: red">Create Product</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Carts/Archive" style="color: red">Orders Archive</a>
                        </li>
                    }
                </ul>

            }
            <ul class="navbar-nav ml-auto">
                @if (!SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                }
                <partial name="_LoginPartial" />
            </ul>
        </div>
    </nav>
    <div class="top-border-line primary-separator"></div>
    <div class="container-fluid">
        @RenderBody()

        @if (IsSectionDefined("scripts"))
        {
            RenderSection("scripts");
        }
    </div>
    <div class="bottom-border-line primary-separator"></div>
    <div class="container">
        <footer>
            <p><strong>CopyRight© <a href="/Home/Privacy">OnlineFoodShop</a>. All rights reserved</strong></p>
        </footer>
    </div>
</body>
</html>